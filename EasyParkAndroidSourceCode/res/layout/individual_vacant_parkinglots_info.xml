<TableLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">

<TableRow
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:descendantFocusability="blocksDescendants"
    android:textIsSelectable="false"
    android:minHeight="120px" >

      <TextView
        android:id="@+id/lotsInfoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_span="2"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        android:textSize="@dimen/lots_list_text_size" />

    <TextView
        android:id="@+id/vacantParkingLotId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textIsSelectable="false" />
   
</TableRow>
 <TableRow 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textIsSelectable="false"
    android:layout_weight = "3"
    android:id="@+id/TableIndividualVacantLot"
    android:stretchColumns="1"
    android:descendantFocusability="blocksDescendants" >
    <TextView
        android:id="@+id/distanceInMiles"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text = "5 miles"
        android:textIsSelectable="false"
        android:layout_weight = "3"
        android:paddingLeft="5dp" />
 

        <TextView
            android:id="@+id/costForParking"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="3"
            android:text="6$"
            android:textIsSelectable="false"
            android:gravity="right"
            android:paddingRight="10dp"/>

</TableRow>
</TableLayout>